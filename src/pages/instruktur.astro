---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero tagline="Instruktur">
    <Fragment slot="subtitle">
      <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase dark:text-gray-400">
            <tr>
              <th scope="col" class="px-6 py-3 bg-gray-50 dark:bg-gray-800"> No </th>
              <th scope="col" class="px-6 py-3"> Nama </th>
              <th scope="col" class="px-6 py-3 bg-gray-50 dark:bg-gray-800"> Pelatihan </th>
              <th scope="col" class="px-6 py-3"> Linkedin </th>
            </tr>
          </thead>
          <tbody>
            {
              instruktur.map(({ no, nama, pelatihan, linkedin }) => (
                <tr class="border-b border-gray-200 dark:border-gray-700">
                  <td class="px-6 py-4 bg-gray-50 dark:bg-gray-800"> {no} </td>
                  <td class="px-6 py-4"> {nama} </td>
                  <td class="px-6 py-4 bg-gray-50 dark:bg-gray-800">{pelatihan}</td>
                  <td class="px-6 py-4 text-center">
                    <a href={linkedin} target="_blank">
                      <Icon name="tabler:brand-linkedin" class="w-5 h-5" />
                    </a>
                  </td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </Fragment>
  </Hero></Layout
>
