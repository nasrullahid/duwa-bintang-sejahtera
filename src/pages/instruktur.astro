  {
    no: 1,
    nama: 'Nurfadilah, SM',
    pelatihan: 'Optimalisasi Media Sosial untuk Meningkatkan Penjualan Produk',
    linkedin: 'https://www.linkedin.com/in/nurfadilah96/',
  },
  {
    no: 2,
    nama: 'Sappewali, S.Pd.,M.Si',
    pelatihan: 'Analisis Kualitas Air dan Teknik Penyaringan Air ',
    linkedin: 'https://www.linkedin.com/in/sappewali-sappewali-5b95352ab/ ',
  },
  {
    no: 3,
    nama: 'Sri Maulana ST . CPT',
    pelatihan: 'Teknik Pemasaran Produk Menggunakan Optimalisasi Media Sosial',
    linkedin: 'http://www.linkedin.com/in/sri-maulana-bustam-st-cpt-b82a4728a ',
  },
  {
    no: 4,
    nama: 'Muhammad Aslam STP',
    pelatihan: 'Optimalaisasi  Whatsapp Bisnis Bagi Spesialis Pemasaran Digital ',
    linkedin: 'https://www.linkedin.com/in/muhammad-aslam-579722262/ ',
  },
  {
    no: 5,
    nama: 'Dr. Ir. Sri Firmiaty, MP.',
    pelatihan: 'Sistem Perkawinan Ternak Secara Buatan dan Alami ',
    linkedin: 'http://www.linkedin.com/in/sri-firmiaty-09935540 ',
